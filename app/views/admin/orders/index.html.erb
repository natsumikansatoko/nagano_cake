<h4 class="m-5 w-25 bg-light text-center">
  <%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴
</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= link_to order.created_at_jst.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class: "underline" %></td>
            <td><%= order.order_items.sum(:amount) %></td>
            <td><%= order.status %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>