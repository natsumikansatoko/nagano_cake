<h4 class="m-5 w-25 bg-light text-center">
  <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
</h4>
<div class="container">
  <div class="row">
    <div class="col-lg">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td>
            <%= @customer.last_name %>　<%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == false %>
              <p class="text-success font-weight-bold">有効</p>
            <% else %>
              <p class="text-light font-weight-bold">退会</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to '編集する', edit_admin_customer_path(@customer), class: 'btn btn-success mr-5' %>
            <%= link_to '注文履歴一覧を見る', admin_customer_orders_path(@customer), class: 'btn btn-primary' %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>