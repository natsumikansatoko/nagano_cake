<h4 class="m-5 w-25 bg-light text-center">会員一覧</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
                <p class="text-success font-weight-bold">有効</p>
              <% else %>
                <p class="text-light font-wight-bold">退会</p>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="d-flex justify-content-center"><%= paginate(@customers) %></div>
    </div>
  </div>
</div>