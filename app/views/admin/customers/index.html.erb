<h4 class="m-5 w-25 bg-light text-center">会員一覧</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>