<div class="container">

<h4 class="bg-light text-center my-3 col-lg-4">管理者ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group my-3">
    <%= f.label :メールアドレス, class: "col-lg-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example", size: 40, class: "col-lg-4" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード, class: "col-lg-2" %>
    <%= f.password_field :password, autocomplete: "current-password", size: 40, class: "col-lg-4" %>
  </div>

  <div class="form-group">
    <div class="col-8 mx-auto">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>