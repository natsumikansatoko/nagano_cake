<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="bg-light text-center my-3 col-lg-4">ログイン</h4>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      <h5 class="bg-light text-center my-3 col-lg-4">会員の方はこちらからログイン</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group my-3">
        <%= f.label :メールアドレス, class: "col-lg-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => 'sample@example.com', size: 40, class: "col-lg-4" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "col-lg-2" %>
        <%= f.password_field :password, autocomplete: "current-password", size: 40, class: "col-lg-4" %>
      </div>

      <div class="form-group">
        <div class="col-8 mx-auto">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    </div>
  </div>
  <div class="row">
    <div class="col">
      <h5 class="bg-light text-center my-3 col-lg-4">会員登録がお済みでない方</h5>
      <span><%= link_to 'こちら', new_customer_registration_path %>　から新規登録を行なってください。</span>
    </div>
  </div>
</div>
