<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="bg-light text-center my-3 col-lg-4">新規会員登録</h4>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table-borderless">
        <tr>
          <th><%= f.label '名前', class: 'mb-2' %></th>
          <td><%= f.label '(姓)', class: 'mb-2' %></td>
          <td><%= f.text_field :last_name, :placeholder => '令和', :size => '25', class: 'mb-2' %></td>
          <td><%= f.label '(名)', class: 'mb-2' %></td>
          <td><%= f.text_field :first_name, :placeholder => '道子', :size => '25', class: 'mb-2' %></td>
        </tr>
        <tr>
          <th><%= f.label 'フリガナ', class: 'mb-2' %></th>
          <td><%= f.label '(セイ)', class: 'mb-2' %></td>
          <td><%= f.text_field :last_name_kana, :placeholder => 'レイワ', :size => '25', class: 'mb-2' %></td>
          <td><%= f.label '(メイ)', class: 'mb-2' %></td>
          <td><%= f.text_field :first_name_kana, :placeholder => 'ミチコ', :size => '25', class: 'mb-2' %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td></td>
          <td><%= f.email_field :email, :placeholder => 'sample@example.com', :size => '25', class: 'mb-2' %></td>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td></td>
          <td><%= f.text_field :postal_code, :placeholder => '0000000', :size => '25', class: 'mb-2' %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td></td>
          <td colspan='3'><%= f.text_field :address, :placeholder => '東京都渋谷区代々木神園町0-0', :size => '58', class: 'mb-2' %></td>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <td></td>
          <td><%= f.text_field :telephone_number, :placeholder => '00000000000', :size => '25', class: 'mb-2' %></td>
        </tr>
        <tr>
          <th>パスワード(6文字以上)</th>
          <td></td>
          <td><%= f.password_field :password, :size => '25', class: 'mb-2' %></td>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <td></td>
          <td><%= f.password_field :password_confirmation, :size => '25', class: 'mb-2' %></td>
        </tr>
        <tr>
          <th></th>
          <td></td>
          <td><%= f.submit '新規登録', class: 'btn btn-success mb-2 col-10' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h4 class="bg-light text-center my-3 col-lg-4">既に登録済みの方</h4>
      <span><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</span>
    </div>
  </div>
</div>
