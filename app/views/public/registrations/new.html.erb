<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="bg-light text-center my-3 col-lg-4">新規会員登録</h4>
    </div>
  </div>
  <div class="row my-3">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table-borderless">
        <tr>
          <th>名前</th>
          <td>(姓)</td>
          <td><%= f.text_field :last_name, :placeholder => '令和', :size => '25' %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>