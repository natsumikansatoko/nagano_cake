<div class="container">
  <div class="row mt-5">
    <div class="col-sm-12 px-sm-0">
      <h4>商品一覧(全<%= @items_all.count %>件)</h4>
    </div>
  </div>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-3 col-sm-6">
      <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
        <%= link_to item_path(item) do %>
        <div class="img-wrap">
          <%= attachment_image_tag item, :image, width: "100%", height: "130px" %>
        </div>
        <% end %>
        <div class="card-body">
          <p class="card-text">
            <%= item.name %>
          </p>
          <% if item.is_active == true %>
          <p class="card-text">
            ￥<%= item.price.to_s(:delimited) %>
          </p>
          <% else %>
          <p class="card-text text-danger">
            販売停止中
          </p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate @items, class: "text-center" %>
</div>