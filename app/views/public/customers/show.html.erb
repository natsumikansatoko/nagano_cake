<h4 class="mt-5 ml-5 w-25 bg-light text-center">マイページ</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1 my-3">
      <h5>登録情報</h5>
    </div>
    <div class="col-sm-4 px-sm-0">
      <%= link_to '編集する', edit_customers_path, class: 'btn btn-success my-3' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg">
      <table class="table table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h5>配送先</h5>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to '一覧を見る', addresses_path, date: {"tubolinks" => false}, class: 'btn btn-primary mb-2' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h5>注文履歴</h5>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>